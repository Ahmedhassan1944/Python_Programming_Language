#import modules necessary for the game
import curses
import random


#initialize the curses library to create our screen
screen = curses.initscr()


# hide the mouse cursor
curses.curs_set(0) #from 0 to --- appearance of cursor


#getmax screen height and width
screen_height, screen_width = screen.getmaxyx() # return two value and store them with  two variable

#create a new window
window = curses.newwin(screen_height, screen_width,0,0)


#allow window to receive inputs from the keyboard
window.keypad(1)

#set the delay for updating the screen (from input to other)
window.timeout(100) #ms


